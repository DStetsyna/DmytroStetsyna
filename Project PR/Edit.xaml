<Window x:Class="Project_PR.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_PR"
        mc:Ignorable="d"
        Title="Edit" Height="450" ResizeMode="CanResize" Width="800">
    
    <Grid Background="Aquamarine">
        <StackPanel VerticalAlignment="Center"
                    Width="200"
                    HorizontalAlignment="Center">

            <TextBlock Text="ID"/>
            <TextBox x:Name="TxtbID"/>
            <TextBlock Text="Kategoria"/>
            <TextBox x:Name="TxtbCategory"/>
            <TextBlock Text="Nazwa"/>
            <TextBox x:Name="TxtbName"/>
            <TextBlock Text="Kraj"/>
            <TextBox x:Name="TxtbCountry"/>
            <TextBlock Text="Rok"/>
            <TextBox x:Name="TxtbYear"/>
            <TextBlock Text="Długość"/>
            <TextBox x:Name="TxtbLength"/>

            <Button Height="20"
                    Margin="5"
                  
                    Content="Edytuj" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</Window>
